<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TxtTableHeader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_table_header</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtSizeMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size_medium</item>
        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <style name="TxtTableBody">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size_table_body</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
    </style>

    <style name="TxtSizeLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size_large</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="ButtonBlueStyle">
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size_table_body</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:layout_marginStart">@dimen/padding_normal</item>
    </style>

    <style name="ButtonDarkYellowStyle">
        <item name="android:background">@drawable/bg_btn_dark_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size_table_body</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:layout_marginStart">@dimen/padding_normal</item>
    </style>
</resources>